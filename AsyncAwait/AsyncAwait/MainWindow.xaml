<Window x:Class="AsyncAwait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncAwait"
        mc:Ignorable="d"
        Title="Async/Await" Height="200" Width="200"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBox Margin="10"/>
        <Button Content="Start !" Margin="10" Click="Button_Click"/>
        <ProgressBar x:Name="progressBarWert" Minimum="0" Maximum="100" Height="50"/>
    </StackPanel>
</Window>
